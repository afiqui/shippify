{
  "compilerOptions": {
    /* Basic Options */
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts", "test/"]
}
